{{breadcrums 'Home' 'Notification'}}
<div class="app-content center-layout mt-2 mx-md-3 px-1">
<div class="content-wrapper">
	<div class="content-body">
	<section id="simple-user-cards" class="row pb-2">
		<div class="col-xl-12 col-md-12 col-sm-12">
		<div class="card-content">
			<div class="row">	
			<span id="dots"></span>
			
			<span class="col-xl-12 col-sm-12 col-12 app-content center-layout mt-2"> 
			<div class=" col-12  bg-white p-0">					 
		
		<div class="container-fluid "> 
		
		<div class="table-responsive">
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th scope="col">No</th>
                        <th scope="col">Module Name</th>
                        <th scope="col">Date</th>
                        <th scope="col">Description</th>
                      </tr>
                    </thead>
                    <tbody>
					{{#each data}}
					 {{#ifCond this.action "==" "New User"}}
                      <tr>
                        <th scope="row">1</th>
                        <td><a href="/users/viewuser/{{this.user}}"><input type="hidden" id="addusernoti" name="id" {{#if this._id}} value="{{this._id}}"{{/if}} /><h6 class="media-heading">{{this.action}}!</h6></a></td>
                        <td><span class="notification-tag badge badge-default badge-warning ">{{this.date}}</span></td>
                        <td>{{this.desc}} {{this.Name}} </td>
                      </tr>
					  {{/ifCond}}
					  {{#ifCond this.action "==" "User Updated"}}
                      <tr>
                        <th scope="row">1</th>
                        <td><a href="/users/viewuser/{{this.user}}"><input type="hidden" id="addusernoti" name="id" {{#if this._id}} value="{{this._id}}"{{/if}} /><h6 class="media-heading">{{this.action}}!</h6></a></td>
                        <td><span class="notification-tag badge badge-default badge-warning ">{{this.date}}</span></td>
                        <td>{{this.Name}} User {{this.desc}} </td>
                      </tr>
					  {{/ifCond}}
					  {{#ifCond this.action "==" "New Loan Added"}}
                      <tr>
                        <th scope="row">1</th>
                        <td><a href="/users/viewuser/{{this.user}}"><input type="hidden" id="addusernoti" name="id" {{#if this._id}} value="{{this._id}}"{{/if}} /><h6 class="media-heading">{{this.action}}!</h6></a></td>
                        <td><span class="notification-tag badge badge-default badge-warning ">{{this.date}}</span></td>
                        <td>{{this.Name}} Loan {{this.desc}} </td>
                      </tr>
					  {{/ifCond}}
					  {{#ifCond this.action "==" "Loan Updated"}}
                      <tr>
                        <th scope="row">1</th>
                        <td><a href="/users/viewuser/{{this.user}}"><input type="hidden" id="addusernoti" name="id" {{#if this._id}} value="{{this._id}}"{{/if}} /><h6 class="media-heading">{{this.action}}!</h6></a></td>
                        <td><span class="notification-tag badge badge-default badge-warning ">{{this.date}}</span></td>
                        <td>{{this.Name}} Loan {{this.desc}} {{this.nameofuser.[0]}} {{this.nameofuser.[1]}} {{this.nameofuser.[2]}} </td>
                      </tr>
					  {{/ifCond}}
                      {{/each}}
					  
                    </tbody>
                  </table>
                </div>
		
		</div>
	</div>
	
	</div>
	</div>
	</div>
	</section>
	</div>
	</div>
	</div>